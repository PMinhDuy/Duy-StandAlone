{
  "compileOnSave": false,
  "compilerOptions": {
    "jsx": "react-jsx",
    "allowJs": false,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "types": ["vite/client", "vitest"],
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "lib": ["es2021", "dom"],
    "resolveJsonModule": true,
    "paths": {
      "@nx-standalone/core/ui": ["core/ui/src/index.ts"],
      "@nx-standalone/core/utils": ["core/utils/src/index.ts"],
      "#/configs/*": ["src/app/configs/*"]
    }
  },
  "exclude": ["node_modules", "tmp"],
  "include": [
    "src/**/*.js",
    "src/**/*.jsx",
    "src/**/*.ts",
    "src/**/*.tsx",
    ".prettierrc.js",
    ".eslintrc.js"
  ]
}
